<h1>Job Show</h1>

<ul>
    <li><%=@job.title%></li>
    <li><%=@job.job_description%></li>
    <li><%=@job.job_location%></li>
    <li><%=@job.keyskills%></li>
    <li><%=@job.sector.name%></li>
    <li><%=@job.type.name%></li>
    <li><%=@job.user.username%></li>
</ul>

<%=link_to "Create a new Job", new_job_path%>
<%=link_to "Edit Job", edit_job_path%>
<%=link_to "Delete Job", job_path, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }%>
<%= render 'posts/post_form' %>
<% if @job.posts%>
  <%@job.posts.each do |post|%>
  <ul>
    <li><%=post.name%></li>
    <li><%=post.post_description%></li>
    <li><%=post.username%></li>
    <li><%=post.phone_number%></li>
    <li><%=post.city%></li>
    <% if post.file.attached?%>
    <li><%=link_to post.file.filename, url_for(post.file)%></li>
    <%end%>
  </ul>
  <%end%>
<%end%>
<h2>Reviews</h2>
<% @job.reviews.each do |review| %>
  <p>
    <strong>Review:</strong>
    <%= review.content %> <span> by </span> <%= link_to review.user.username, user_path(review.user)%>
  </p>
<% end %>
<h2>Add a review:</h2>
<%= form_with model: [ @job, @job.reviews.build ] do |form| %>
  <p>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
