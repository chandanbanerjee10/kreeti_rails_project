<h1>Create a new Job Post</h1>

<%= form_with( model: @post) do |f|%>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %> 
    </div>
    <br>
    <div>
        <%= f.label :post_description %>
        <%= f.text_area :post_description %>
    </div>
    <br>
    <div>
        <%= f.label :username %>
        <%= f.text_field :username %> 
    </div>
    <br>
    <div>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %> 
    </div>
    <br>
    <div>
        <%= f.label :city %>
        <%= f.text_field :city %> 
    </div>
    <br>



    <%= f.submit "Submit" %>
<%end%>