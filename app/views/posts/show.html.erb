<h1 class = "text-center ">Post Show</h1>
<div class="container post-container mt-4">
  <div class="row justify-content-md-center">
      <div class="col-6 mt-6">
        <div class="card shadow mb-5 bg-white rounded post-card">
          <div class="card-header text-center font-weight-bold " id = "post-head">    
              Posted By <%= link_to @post.user.username, user_path(@post.user), class: "text-danger"%>
          </div>
          <div class="card-body">
            <h5 class="card-title text-success text-left text-decoration-none"> <%= @post.name%></h5>
            <p class="card-text"><%= @post.post_description %></p>
            <p > <strong>Phone Number:</strong> <%= @post.phone_number%></p>
            <p> <strong> City:</strong> <%=@post.city%></p>
            <p> <strong> Username:</strong> <%=@post.username%></p>
            <div class="text-center">
              <% if @post.file.attached?%>
                <%=button_to @post.file.filename, url_for(@post.file), method: :get, class: "btn btn-primary"%>
              <%end%>
            </div>
          </div>
          <div class="card-footer text-center text-muted">
            <small> Created <%= time_ago_in_words(@post.created_at)%> ago, Edited <%= time_ago_in_words(@post.updated_at)%> ago</small>
          </div>
        </div>
      </div>
  </div>
</div>

<div class="text-center mb-4">
  <%if !@post.is_approved?%>
    <%= button_to "Accept", respond_to_candidate_path, class: "btn btn-success mb-4"%>
    <%= link_to "Reject", reject_candidate_path(@post), class: "btn btn-danger", data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure you want to delete this post?"}%>  
  <%end%>
</div>

