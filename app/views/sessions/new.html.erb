  <div class="container">
    <div class = "row justify-content-center">
        <div class="col-8">
            <%= form_with(scope: :session, url: login_path) do |f| %>
                <div>
                    <%= f.label :email %>
                    <%= f.email_field :email, rows:10, placeholder:"Enter your email"%>
                </div>
                <br>
                <div>
                    <%= f.label :password %>    
                    <%= f.password_field :password, rows:10, placeholder:"Enter your password"%>
                </div>

                <div style="margin-top: 15px;">
                    <%= f.submit "Log In"%>
                </div>

            <% end %>
        </div>  
    </div>
</div>