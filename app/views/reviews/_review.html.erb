<h2>Reviews</h2>
  <% @job.reviews.each do |review| %>
    <p>
      <strong><%= link_to review.user.username, user_path(review.user), class: "reviews"%>:</strong>
      <%if review.user%>
        <%= review.content %>
      <%end%>
    </p>
  <% end %>
  <h2>Add a review:</h2>
  <%= form_with model: [ @job, @job.reviews.build ] do |form| %>
    <p>
      <%= form.label :content %>
      <div class="form-group col-md-8">  
        <%= form.text_area :content, class: "form-control" %>
      </div>
    </p>
    <p>
      <%= form.submit class:"btn btn-success"%>
    </p>
  <% end %>

